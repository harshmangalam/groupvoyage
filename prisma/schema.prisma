generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id        String   @id @default(uuid())
  city      String
  slug      String   @unique
  country   String
  active    Boolean  @default(true)
  events    Event[]
  groups    Group[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id        String     @id @default(uuid())
  name      String     @unique
  slug      String     @unique
  details   String
  posterUrl String
  instagram String?
  phone     String?
  email     String?
  address   String?
  meta      Json?
  source    String
  events    Event[]
  locations Location[]

  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id         String   @id @default(uuid())
  title      String   @unique
  slug       String   @unique
  durations  String?
  details    String?
  price      Int?
  locationId String
  groupId    String
  posterUrls String[]
  meta       Json?
  itinerary  Json?
  includes   String[]
  excludes   String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isArchived Boolean  @default(false)

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
}
